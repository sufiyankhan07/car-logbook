<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trip_layoutid"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="16/10/2019"
                android:layout_gravity="start"
                android:textSize="@dimen/text_size"
                android:id="@+id/startdate_trip_resource"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Wednesday"
                android:layout_marginStart="4dp"
                android:layout_gravity="start"
                android:textSize="@dimen/text_size"
                android:id="@+id/dayofmonth_trip_resource"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_weight="0.4"
            android:text="5km"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:textSize="@dimen/text_size"
            android:id="@+id/distance_trip_resource"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_trip_list_icon"
                tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_marginStart="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/trip_type_trip_resource"
                android:textSize="@dimen/label_size"
                android:text="Personal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_left_trip_list"
                    tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/start_address_trip_resource"
                android:text="CHAITANYA CHS-TOWER, 2ND FLOOR, OFFICE NO.206, SIDDARTH NAGAR, S.V. ROAD OPP: ON S.V. ROAD, Ram Mandir Rd, Goregaon West, Mumbai, Maharashtra 400062, India"
                android:textColor="@color/black"
                android:layout_marginStart="3dp"
                android:textSize="@dimen/heading12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right_trip_list"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:id="@+id/end_address_trip_resource"
                    android:text="CHAITANYA CHS-TOWER, 2ND FLOOR, OFFICE NO.206, SIDDARTH NAGAR, S.V. ROAD OPP: ON S.V. ROAD, Ram Mandir Rd, Goregaon West, Mumbai, Maharashtra 400062, India"
                    android:textColor="@color/black"
                    android:textSize="@dimen/heading12"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Maruti suzuki 800"
        android:textSize="@dimen/heading14"
        android:layout_weight="0.5"
        android:gravity="start"
        android:id="@+id/vehicle_name_trip_resource"
        android:textColor="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mh 04 1528"
            android:layout_weight="0.5"
            android:gravity="end"
            android:textSize="@dimen/heading14"
            android:id="@+id/registration_no_trip_resource"
            android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/id_trip_resource"
        android:visibility="invisible"/>

</LinearLayout>