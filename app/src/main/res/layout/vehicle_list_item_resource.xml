<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_list"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout_carlist"
        android:visibility="visible"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_car_list"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/carname_carlist"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.8"
                    android:text="@string/maruti_800"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:id="@+id/vldelete"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:src="@drawable/baseline_delete"
                    android:layout_gravity="end"/>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ownership_carlist"
                android:layout_weight="0.5"
                android:text="Personal"
                android:textSize="@dimen/heading14"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/numberplat_carlist"
                android:layout_weight="0.5"
                android:text="MH04 B3587"
                android:textSize="@dimen/heading14"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/make_carlist"
                    android:layout_weight="0.5"
                    android:text="2019"
                    android:textSize="@dimen/heading14"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/model_carlist"
                    android:layout_weight="0.5"
                    android:text="Suzuki"
                    android:textSize="@dimen/heading14"/>
            </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>